<% provide :title, t("layouts.header.home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info entry_form">
        <h1>
          <%= gravatar_for current_user %>
          <%= current_user.name.upcase %>
        </h1>
      </section>
    </aside>
    <div class="btn-group btn-group-justified" role="group" saria-label="">
      <%= link_to t("static_pages.home.btn.word"), words_path,
        class: "btn btn-danger" %>
      <%= link_to t("static_pages.home.btn.lesson"), categories_path,
        class: "btn btn-success" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>
    <h2>
      <%= t "static_pages.home.promotion" %>
      <br> <br>
      <%= t "static_pages.home.or" %>
      <%= link_to t(".sign_up"), new_user_path %>
      <%= t "static_pages.home.create_account_free" %>
    </h2>
  </div>
<% end %>
